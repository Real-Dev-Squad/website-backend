{
  "name": "website-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "echo $FIRESTORE_CONFIG_DATA > firestore-private-key.json && node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test-config": "node local-test.js",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test-integration": "cross-env NODE_ENV=test mocha test/integration/**",
    "test-unit": "cross-env NODE_ENV=test mocha test/unit/**",
    "test": "npm run lint && npm run test-integration && npm run test-unit",
    "generate-api-schema": "node utils/generateAPISchema.js"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.2.0",
    "config": "^3.3.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-boom": "^3.0.0",
    "helmet": "^4.0.0",
    "http-errors": "~1.6.3",
    "joi": "^17.2.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "swagger-jsdoc": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2",
    "sinon": "^9.0.3",
    "standard": "^14.3.4"
  },
  "pre-commit": [
    "lint"
  ]
}
