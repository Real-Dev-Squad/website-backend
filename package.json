{
  "name": "website-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "echo $FIRESTORE_CONFIG_DATA > firestore-private-key.json && node server.js",
    "dev": "nodemon server.js",
    "lint": "standard",
    "lint-fix": "standard --fix",
    "text-integration": "NODE_ENV=test mocha test/integration/**",
    "text-unit": "NODE_ENV=test mocha test/unit/**",
    "test": "npm run lint && npm run text-integration && npm run text-unit"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.2.0",
    "config": "^3.3.1",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-boom": "^3.0.0",
    "helmet": "^4.0.0",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "pre-commit": "^1.2.2",
    "sinon": "^9.0.3",
    "standard": "^14.3.4"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "pre-commit": [
    "lint"
  ]
}
