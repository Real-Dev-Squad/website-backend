{
  "name": "website-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "echo $FIRESTORE_CONFIG_DATA > firestore-private-key.json && node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "test-config": "node scripts/local-test.js",
    "test-integration": "sh scripts/tests/testIntegration.sh",
    "test-unit": "sh scripts/tests/testUnit.sh",
    "test": "npm run lint && npm run test-integration && npm run test-unit",
    "generate-api-schema": "node utils/generateAPISchema.js"
  },
  "dependencies": {
    "@google-cloud/firestore": "^4.9.4",
    "axios": "^0.21.1",
    "config": "^3.3.3",
    "cookie-parser": "~1.4.5",
    "cors": "^2.8.5",
    "debug": "~4.3.1",
    "express": "~4.17.1",
    "express-boom": "^3.0.0",
    "helmet": "^4.4.1",
    "http-errors": "~1.8.0",
    "joi": "^17.4.0",
    "jsdoc": "^3.6.6",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.10.0",
    "passport": "^0.4.1",
    "passport-github2": "^0.1.12",
    "standard": "^16.0.3",
    "swagger-jsdoc": "^6.0.6",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "chai": "^4.3.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-mocha": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.1.0",
    "mocha": "^8.3.0",
    "nock": "^13.0.7",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "sinon": "^9.2.4"
  },
  "pre-commit": [
    "lint"
  ]
